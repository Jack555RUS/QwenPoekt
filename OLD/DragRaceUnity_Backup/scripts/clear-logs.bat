@echo off
REM Очистка логов Unity проекта

echo ============================================================================
echo Очистка логов проекта DragRaceUnity
echo ============================================================================
echo.

REM Очистка папки Logs
echo Очистка Logs/...
del /q "Logs\*.log" >nul 2>&1
if %errorlevel% equ 0 (
    echo   ✅ Логи очищены
) else (
    echo   ⚠️  Некоторые файлы не удалены
)

REM Очистка build.log
echo Очистка build.log...
del /q "build.log" >nul 2>&1
if %errorlevel% equ 0 (
    echo   ✅ build.log очищен
) else (
    echo   ℹ️  build.log не найден
)

REM Очистка временных файлов
echo Очистка временных файлов...
del /q "Temp\*.log" >nul 2>&1
del /q "*.tmp" >nul 2>&1

echo.
echo ============================================================================
echo Очистка завершена!
echo ============================================================================
echo.
echo Следующие шаги:
echo 1. Откройте Unity
echo 2. Дождитесь реимпорта
echo 3. Проверьте Console на новые ошибки
echo.
pause
