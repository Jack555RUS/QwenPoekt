# EditorConfig для проекта ProbMenu
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
# Организация using-директив
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false

# this. предпочтения
dotnet_style_qualification_for_field = false:warning
dotnet_style_qualification_for_property = false:warning
dotnet_style_qualification_for_method = false:warning
dotnet_style_qualification_for_event = false:warning

# this. предпочтения для языка
dotnet_style_object_initializer = true:warning
dotnet_style_collection_initializer = true:warning

# Явные/неявные типы
dotnet_style_var_for_built_in_types = false:warning
dotnet_style_var_when_type_is_apparent = true:warning
dotnet_style_predefined_type_for_locals_parameters_members = true:warning
dotnet_style_predefined_type_for_member_access = true:warning

# Модификаторы доступа
dotnet_style_require_accessibility_modifiers = for_non_interface_members:warning
dotnet_style_default_accessibility_by_type = true:warning

# Скобки
dotnet_style_parentheses_in_arithmetic_operators = always_for_clarity:silent
dotnet_style_parentheses_in_relational_operators = always_for_clarity:silent
dotnet_style_parentheses_in_other_operators = never_if_unnecessary:silent
dotnet_style_parentheses_in_other_binary_and_logical_operators = for_clarity:silent

# Null-проверки
dotnet_style_null_propagation = true:warning
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:warning

# Строки
dotnet_style_string_concatenation = true:warning

# Pattern matching
dotnet_style_prefer_pattern_matching = true:warning
dotnet_style_prefer_not_pattern = true:warning

# Выбрасывание исключений
dotnet_style_throw_expression = true:warning

# Async/await
dotnet_style_async_main = false:error

# Предпочтения выражений
dotnet_style_prefer_conditional_expression_over_assignment = true:silent
dotnet_style_prefer_conditional_expression_over_return = true:silent
dotnet_style_prefer_compound_assignment = true:warning
dotnet_style_prefer_simplified_interpolation = true:warning
dotnet_style_prefer_simplified_boolean_expressions = true:warning

# Поля
dotnet_style_readonly_field = true:warning

# Параметры
dotnet_code_quality_unused_parameters = all:warning

# Свойства
dotnet_style_auto_property = true:warning
dotnet_style_prefer_auto_property = true:warning

# Предпочтения для lambda
dotnet_style_prefer_method_group_conversion = true:warning
dotnet_style_prefer_top_level_statements = false:suggestion

# Разделители
csharp_style_var_for_built_in_types = false:warning
csharp_style_var_when_type_is_apparent = true:warning
csharp_style_var_elsewhere = false:warning

# Модификаторы
csharp_preferred_modifier_order = public,private,protected,internal,static,extern,new,virtual,abstract,sealed,override,readonly,unsafe,volatile,async:warning

# Скобки для control flow
csharp_style_braces_for_if_else = true:warning
csharp_style_braces_for_for_loop = true:warning
csharp_style_braces_for_do_loop = true:warning
csharp_style_braces_for_while_loop = true:warning
csharp_style_braces_for_foreach_loop = true:warning
csharp_style_braces_for_switch_branches = true:warning

# Предпочтения для switch
csharp_style_pattern_matching_over_is_with_cast_check = true:warning
csharp_style_pattern_matching_over_as_with_null_check = true:warning
csharp_style_prefer_switch_expression = true:warning

# Null-проверки
csharp_style_null_checking_with_pattern_matching = true:warning
csharp_style_throw_expression = true:warning

# Interpolated strings
csharp_style_prefer_interpolated_string_over_string_concatenation = true:warning

# Expression-bodied members
csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_constructors = false:suggestion
csharp_style_expression_bodied_operators = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = true:suggestion
csharp_style_expression_bodied_indexers = true:suggestion
csharp_style_expression_bodied_accessors = true:suggestion

# Pattern matching
csharp_style_pattern_local_over_anonymous_function = true:warning

# Match nullable
dotnet_code_quality.null_checking_style = pattern

# Naming conventions
dotnet_naming_symbols.interface_symbols.applicable_kinds = interface
dotnet_naming_symbols.interface_symbols.applicable_accessibilities = public, internal, private, protected, protected_internal

dotnet_naming_symbols.class_symbols.applicable_kinds = class, struct
dotnet_naming_symbols.class_symbols.applicable_accessibilities = public, internal, private, protected, protected_internal

dotnet_naming_style.pascal_case_style.required_prefix = 
dotnet_naming_style.pascal_case_style.required_suffix = 
dotnet_naming_style.pascal_case_style.word_separator = 
dotnet_naming_style.pascal_case_style.capitalization = pascal_case

dotnet_naming_style.camel_case_style.required_prefix = 
dotnet_naming_style.camel_case_style.required_suffix = 
dotnet_naming_style.camel_case_style.word_separator = 
dotnet_naming_style.camel_case_style.capitalization = camel_case

dotnet_naming_rule.interface_names_must_be_pascal_case.severity = warning
dotnet_naming_rule.interface_names_must_be_pascal_case.symbols = interface_symbols
dotnet_naming_rule.interface_names_must_be_pascal_case.style = pascal_case_style

dotnet_naming_rule.classes_must_be_pascal_case.severity = warning
dotnet_naming_rule.classes_must_be_pascal_case.symbols = class_symbols
dotnet_naming_rule.classes_must_be_pascal_case.style = pascal_case_style

dotnet_naming_rule.methods_must_be_pascal_case.severity = warning
dotnet_naming_rule.methods_must_be_pascal_case.symbols = instance_methods
dotnet_naming_rule.methods_must_be_pascal_case.style = pascal_case_style

dotnet_naming_rule.private_fields_must_be_camel_case.severity = warning
dotnet_naming_rule.private_fields_must_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_fields_must_be_camel_case.style = camel_case_style

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_symbols.instance_methods.applicable_kinds = method
dotnet_naming_symbols.instance_methods.applicable_accessibilities = public, internal, private, protected, protected_internal

[*.csproj]
indent_size = 2

[*.{md,txt,yml,yaml,json}]
trim_trailing_whitespace = false
